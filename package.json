{
  "name": "swiftmap",
  "version": "0.1.9",
  "description": "Make quick maps with D3 and TopoJSON.",
  "main": "dist/swiftmap.min.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "minify": "uglifyjs dist/swiftmap.js --preamble \"$(preamble)\" -c keep_fnames=true -m reserved=['SchemeSequential','SchemeCategorical','Swiftmap'] -o dist/swiftmap.min.js",
    "rollup": "rm -rf dist && mkdir dist && rollup -c --banner \"$(preamble)\"",
    "build": "npm run rollup && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HarryStevens/swiftmap.git"
  },
  "keywords": [
    "d3",
    "mapping",
    "cartography",
    "topojson",
    "map",
    "maps"
  ],
  "author": {
    "name": "Harry Stevens",
    "url": "https://harryjstevens.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HarryStevens/swiftmap/issues"
  },
  "homepage": "https://github.com/HarryStevens/swiftmap#readme",
  "devDependencies": {
    "package-preamble": "^0.1.0",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "uglify-js": "^3.3.21"
  },
  "dependencies": {
    "chroma-js": "^1.3.6",
    "d3-geo": "^1.10.0",
    "d3-selection": "^1.3.0",
    "d3-transition": "^1.1.1"
  }
}
